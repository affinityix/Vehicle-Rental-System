@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;

@model VehicleImageViewModel

@{
    ViewData["Title"] = "Vehicle";
    var title = "Vehicle Details";
}

<div class="container-fluid" style=" margin-top:10vh;">
    <form method="post">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h3 class="text-dark">@title</h3>
            </div>
            <div class="col-8 pt-4">
                @foreach(var item in Model.Images)
                {
                    <div class="form-group row mb-4">
                        <div class="col-4">
                        </div>
                        <div class="col-8 ">
                                <div class="row border-purple  mt-4 ml-4" style="min-height: auto; width: 300px; margin-left:0px;">
                                <img id="previewImage" src="data:image/*;base64,@(Convert.ToBase64String(item.ProfileImage))" style="width: 300px; height: auto; margin:auto;" />
                            </div>
                        </div>
                    </div>
                }
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden"/>
                    <div class="col-4">
                        <label asp-for="Model"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Model" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden"/>
                    <div class="col-4">
                        <label asp-for="Brand"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Brand" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden"/>
                    <div class="col-4">
                        <label asp-for="Color"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Color" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden"/>
                    <div class="col-4">
                        <label asp-for="PlateNumber"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="PlateNumber" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden"/>
                    <div class="col-4">
                        <label asp-for="PricePerDay"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="PricePerDay" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Description" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Features"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Features" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CreatedBy"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="CreatedBy" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CreatedDate"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="CreatedDate" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-blue form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
