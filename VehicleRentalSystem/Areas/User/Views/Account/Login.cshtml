@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>User Login</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
            <h4>Use a local account to log in.</h4>
            <hr />
            <div class="form-floating col-8 my-2">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email" class="ps-2"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating col-8 my-2">
                <input asp-for="Password" id="initial" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password" class="ps-2"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <div class=" col-md-10">
                    <div class="custom-checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group mb-2">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary form-control">Log in</button>
                </div>
            </div>
            <p>
                <a asp-action="Register"> Register as a new user?</a>
            </p>
            <p>
                <a asp-action="ForgotPassword"> Forgot your passowrd?</a>
            </p>
        </form>
    </div>
</div>