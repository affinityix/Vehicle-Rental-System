@using VehicleRentalSystem.Domain.Entities;

@model Brand

@{
    ViewData["Title"] = "Brand";
    var title = "Delete an existing brand";
}

<div class="container-fluid">
    <h1>Brands</h1>
    <form method="post">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h2 class="text-dark">@title</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <input asp-for="Id" class="form-control" type="hidden"/>
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="Description" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row border border-primary mt-4 ml-4" style="min-height: 230px; width: 225px; margin: auto">
                        <img id="previewImage" src="data:image/*;base64,@(Convert.ToBase64String(Model.Image))" style="width: 220px; height: 230px;" />
                    </div>
                </div>
                <input asp-for="CreatedDate" class="form-control" type="hidden" />
                <input asp-for="LastModifiedDate" class="form-control" type="hidden" />
                <input asp-for="DeletedDate" class="form-control" type="hidden" />
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-dark form-control">Delete</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-dark form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
