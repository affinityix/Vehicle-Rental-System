@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;
@model List<RentalDetailsViewModel>

@{
ViewData["Title"] = "Requested Rents";
}

<h1>Requested Rents</h1>

<partial name="_Notification" />

<div class="row">
	<form method="post">
		@foreach (var item in Model)
	{
		<div class="card">
			<div class="card-body">
				<div class="row">
					<div class="col-4">
						@foreach(var image in item.VehicleImages)
						{
							<div class="row mb-2">
								<img id="profilePicture" style="width:350px;height:400px; object-fit:cover; margin:auto" src="@image.ImageURL">
							</div>
						}
					</div>
					<div class="col-8">
						<div class="row">
							<input asp-for="@item.Id" hidden/>
						</div>
							<div class="row">
								Customer Name: @item.UserName
							</div>
								<div class="row">
								Phone Number: @item.PhoneNumber
							</div>
							@if(item.LicenseURL != null)
							{
								<div class="row">
									License Number: @item.LicenseNumber
								</div>
								<div class="row">
									Citizenship Number: @item.CitizenshipNumber
								</div>
							}
							
						<div class="row">
							Vehicle Name: @item.VehicleName
						</div>
						<div class="row">
							Requested Date: @item.RequestedDate
						</div>
						<div class="row">
							Start Date: @item.StartDate
						</div>
						<div class="row">
							End Date: @item.EndDate
						</div>
						<div class="row">
							Total Amount: @item.TotalAmount
						</div>
						<div class="row">
							<button type="submit" asp-area="Admin" asp-controller="Rental" asp-action="AcceptRent" asp-route-rentalId="@item.Id" type="submit">Approve</button>
						</div>
						<div class="row">
							<button type="submit" asp-area="Admin" asp-controller="Rental" asp-action="RejectRent" asp-route-rentalId="@item.Id" type="submit">Reject</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
	</form>
</div>

