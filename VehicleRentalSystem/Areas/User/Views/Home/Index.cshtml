@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_Notification" />

<div class="container"  style=" margin-top:10vh;">
    @*<div class="row">
        @foreach(var item in Model.Brand)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <img id="profilePicture" style="width:100px;height:100px; object-fit:cover" src="@item.Image">
                </div>
            </div>
        }
    </div>*@
    <div class="row" style="display:flex; justify-content: space-around;">
        <div class="d-flex mb-5" style="height:350px">
            <div class="w-50 d-flex flex-column justify-content-end">
                <img src="~/images/system/home.png" style="height:275px; width: auto;" />
            </div>
            <div class="w-50 d-flex justify-content-end align-items-end mb-0">
                <p class="text-align-right" style="font-size:100px; text-align:right;">Find Your Drive.</p>
            </div>
        </div>
        <div class=" d-flex mt-3 flex-column mb-5 justify-content-center" style="height:200px; background-color:rgba(116, 72, 145, 5%) !important">
            <p class="text-align-right" style="font-size:60px; text-align:center;">Experience the car sharing market place.</p>
        </div>
        <div class="d-flex flex-wrap justify-content-between mt-5">
            @foreach (var item in Model.Vehicle)
            {
                <div class="col-md-6" style="width:22.5%; margin-bottom:55px;">
                    <div class="row p-2">
                        <div class="col-12 p-1 bg-white" style=" border-radius: 5px;">
                            <div class="container-item d-flex justify-content-end" style="padding:20px;" >
                                @if (item.Offer != "No offer")
                                {
                                    <p class="card-title h4 text-danger text-right position-absolute px-3 oy-1" style="z-index:11; background-color:rgba(255, 255, 255, 0.76) ;">@item.Offer</p>
                                }
                                <img id="profilePicture" class="position-relative" style="width:100% ;height:165px; object-fit:cover" src="@item.ImageURL">
                            </div>
                            <div class="col" style="padding: 0 20px 20px 20px;">
                                <div class="row pl-2 ">
                                    <p class="card-title h4 text-dark">@item.Name</p>
                                </div>
                                <div class="row">
                                    <b>@item.PricePerDay</b>
                                </div>
                            </div>
                            <div style="padding: 0 20px 20px 20px;">
                                <a asp-action="Detail" class="btn btn-primary form-control" asp-route-id="@item.Id">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex mt-5 p-3" style="height:350px; background-color:rgba(116, 72, 145, 5%) !important">
            <div class="w-50 d-flex px-5 h-100 align-items-center">
                <p style="font-size:18px; font-weight:600; text-align:justify"> Our website provides a diverse selection of vehicles from different brands, including fuel-efficient economy cars, spacious SUVs and minivans, and luxurious premium cars. We offer transparent pricing, flexible rental options, and easy booking to ensure a hassle-free rental experience. Whether you need a car for city driving or a long road trip, we have got you covered. </p>
            </div>
            <div class="w-50">
            </div>
        </div>
    </div>
</div>
