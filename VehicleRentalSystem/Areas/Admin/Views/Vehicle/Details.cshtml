@using VehicleRentalSystem.Presentation.Areas.Admin.ViewModels;

@model VehicleDetailViewModel

@{
    ViewData["Title"] = "Vehicle Detail";
    var title = "Vehicle Details";
}

<div class="container-fluid" style=" margin-top:10vh;">
    <form method="post">
        <div class="row mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-6">
                <h3 class="text-dark">@title</h3>
            </div>
            <div class="col-8 pt-4">
                @foreach (var item in Model.VehicleImageViewModel.Images)
                {
                    <div class="form-group row mb-4">
                        <div class="col-4">
                        </div>
                        <div class="col-8 ">
                                <div class="row border-purple  mt-4 ml-4" style="min-height: auto; width: 300px; margin-left:0px;">
                                <img id="previewImage" src="@item.ImageURL" style="width: 300px; height: auto; margin:auto;" />
                            </div>
                        </div>
                    </div>
                }
                <div class="form-group row">
                    <input asp-for="VehicleImageViewModel.Id" class="form-control" type="hidden"/>
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.Model"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.Model" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.Brand"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.Brand" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.Color"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.Color" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.PlateNumber"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.PlateNumber" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.PricePerDay"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.PricePerDay" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.Description"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.Description" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.Features"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.Features" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.CreatedBy"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.CreatedBy" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="VehicleImageViewModel.CreatedDate"></label>
                    </div>
                    <div class="col-8 mb-4">
                        <input asp-for="VehicleImageViewModel.CreatedDate" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-blue form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @if (Model.RentailDetails.Count > 0)
    {
        <div class="row">
            <table id="tableData" class="table table-striped table-bordered" style="width:100%">
                <thead class="mt-2">
                    <tr class="table-info">
                        <th class="text-center">Customer Name</th>
                        <th class="text-center">Rented Days</th>
                        <th class="text-center">Return Date</th>
                        <th class="text-center">Total Amount</th>
                        <th class="text-center">Approved Staff</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RentailDetails)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.RentedDays</td>
                            <td>@item.ReturnedDate</td>
                            <td>@item.TotalAmount</td>
                            <td>@item.ApprovedStaff</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h2>The vehicle hasnt been rented yet</h2>
    }
</div>

