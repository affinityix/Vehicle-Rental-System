@using VehicleRentalSystem.Domain.Entities;

@model List<Brand>

@{
	ViewData["Title"] = "Brand";
}

<partial name="_Notification" />

<div class="container-fluid">
    <h1>Brands</h1>
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-dark">List of Brands</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-dark" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Add a new Brand</a>
        </div>
    </div>

    <div class="p-2 border rounded">
        <table id="tableData" class="table table-striped table-bordered" style="width:100%">
            <thead class="mt-2">
                <tr class="table-info">
                    <th class="text-center">Name of Brand</th>
                    <th class="text-center">Activation Status</th>
                    <th class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="@Url.Action("Details", "Brand", new { id = item.Id })" class="btn btn-dark btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                            <a href="@Url.Action("Upsert", "Brand", new { id = item.Id })" class="btn btn-dark btn-sm"><i class="fa fa-cogs"></i></a>
                            <a href="@Url.Action("Delete", "Brand", new { id = item.Id })" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $("#tableData").DataTable();
    </script>
}

